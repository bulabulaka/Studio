{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./src/client/dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "allowJS": true,
    "noEmitOnError": false,
    "module": "CommonJS",
    "types": [
      "node"
    ]
  }
}
